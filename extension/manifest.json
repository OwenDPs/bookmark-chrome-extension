{
  "manifest_version": 3,
  "name": "Bookmark Manager",
  "version": "1.0.0",
  "description": "A bookmark manager extension with Cloudflare Worker backend and D1 database",
  "permissions": [
    "storage",
    "activeTab",
    "identity",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "https://*.workers.dev/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Bookmark Manager",
    "default_icon": {
      "16": "assets/icon-placeholder.svg",
      "48": "assets/icon-placeholder.svg",
      "128": "assets/icon-placeholder.svg"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "assets/icon-placeholder.svg",
    "48": "assets/icon-placeholder.svg",
    "128": "assets/icon-placeholder.svg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://*.google.com/*", "*://*.facebook.com/*", "*://*.twitter.com/*"],
      "js": ["config/config.js", "content/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["config/config.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}